@page "/auth"
@using blazor_tailwind_netflix.Client.Shared

<div class="relative h-full w-full bg-[url('/images/hero.jpg')] bg-no-repeat bg-center bg-fixed bg-cover">
   <div class="bg-black w-full h-full lg:bg-opacity-50">
        <nav class="px-12 py-5">
            <img src="/images/logo.png" alt="Logo" class="h-12" />
        </nav>
        <div class="flex justify-center">
            <div class="bg-black bg-opacity-70 px-16 py-16 self-center mt-2 lg:w-2/5 lg:max-w-md rounded-md w-full">
                <h2 class="text-white text-4xl mb-8 font-semibold">
                    @(isLogin ? "Sign in" : "Register")
                </h2>
                <div class="flex flex-col gap-4">
                    <Input
                        Label="Username"
                        Id="name"
                        @bind-Value=@username
                        />
                    @if(variant == "register")
                    {
                        <Input
                            Label="Email"
                            Id="email"
                            Type="email"
                            @bind-Value=@email  />
                    }
                    <Input
                        Label="Password"
                        Id="password"
                        Type="password"
                        @bind-Value=@password  />
                </div>
                <button @onclick="LoginOrRegister"
                        class="bg-red-600 
                                py-3
                                text-white
                                rounded-md
                                w-full
                                mt-10
                                hover:bg-red-700
                                transition">
                    @(isLogin ? "Login" : "Sign up")
                </button>
                <p class="text-neutral-500 mt-12">
                    @(isLogin ? "First time using Neflix?" : "Already have an account?")
                    <span @onclick="ToggleVariant" class="text-white ml-1 hover:underline cursor-pointer">
                        @(isLogin ? "Create account" : "Login")
                    </span>
                </p>
            </div>
        </div>
   </div> 
</div>
