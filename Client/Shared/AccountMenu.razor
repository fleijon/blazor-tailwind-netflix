@using blazor_tailwind_netflix.Client.Services

<div class="bg-black w-56 absolute top-14 right-0 py-5 flex-col border-2 border-gray-800 flex">
    <div class="flex flex-col gap-3">
    <div class="px-3 group/item flex flex-row gap-3 items-center w-full">
        <img class="w-8 rounded-md" src="/images/default-blue.png" alt="" />
        <p class="text-white text-sm group-hover/item:underline">Unknown</p>
    </div>
    </div>
    <hr class="bg-gray-600 border-0 h-px my-4" />
    <div @onclick="SignOut" class="px-3 text-center text-white text-sm hover:underline">
        Sign out of Netflix
    </div>
</div>

@code {
    [Inject]
    public IAuthenticationService AuthenticationService { get;set; } = null!;
    private void SignOut()
    {
        AuthenticationService.Logout();
    }
}